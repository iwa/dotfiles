// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ssh_connections": [
    {
      "host": "srv-prod-tokyo",
      "projects": [
        {
          "paths": ["/opt/docker"]
        }
      ]
    }
  ],
  // AI settings
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "dock": "left"
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  // Terminal
  "terminal": {
    "dock": "bottom",
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 12,
    "copy_on_select": false,
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  // File explorer
  "project_panel": {
    "dock": "right",
    "hide_root": true,
    "auto_fold_dirs": false,
    "indent_guides": {
      "show": "always"
    }
  },
  "icon_theme": "Catppuccin Mocha",
  "telemetry": {
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "buffer_font_size": 12,
  "wrap_guides": [80],
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "iwa theme dark"
  },
  // Tabs
  "tabs": {
    "file_icons": true
  },
  "bottom_dock_layout": "right_aligned",
  "gutter": {
    "folds": false
  },
  "languages": {
    "Go": {
      "language_servers": ["gopls", "golangci-lint"]
    }
  },
  "lsp": {
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path=stdout",
          "--issues-exit-code=1",
          "--show-stats=false"
        ]
      }
    },
    "stylelint-lsp": {
      "binary": {
        "path": "C:\\Program Files\\nodejs\\node.exe",
        "arguments": [
          "C:\\Users\\iwaqw\\AppData\\Local\\Zed\\extensions\\work\\stylelint\\stylelint-vsix\\extension\\dist\\start-server.js",
          "--stdio"
        ]
        // change for windows vs mac
      },
      "settings": {
        "stylelint": {
          "validate": ["css", "postcss", "scss"]
        }
      }
    }
  },
  // Inlay hints
  "inlay_hints": {
    "enabled": true,
    "show_background": false
  },
  // Status bar
  "status_bar": {
    "active_language_button": true,
    "cursor_position_button": true
  },
  // Titlebar
  "title_bar": {
    "show_branch_icon": true
  },
  "minimap": {
    "show": "never"
  },
  "show_whitespaces": "trailing"
}
